/* pages/kalaOK/kalaOK.wxss */
/*当前商品条目*/
.shop{
  padding: 20rpx;
  border-bottom:1rpx solid #ddd;
  display: flex; 
  position: relative;
}
/*当前商品图片*/
.shop-img{
  width: 160rpx;
  height: 158rpx;
  margin-right: 20rpx; 
}
/*商品信息*/
.shop-info{
  width: 520rpx;
  font-size:12px;
  color: #666;
  display: flex;
  flex-direction: column;
  line-height: 1.5;
}
/*店铺名称*/
.shop-title{
  font-size: 16px;
  color: #333;
  width: 380rpx;
}
/*打分*/
.shop-star{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.star-after{
  color: #e2e2e2;
}
.star-before{
  color: #f19e38;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
}
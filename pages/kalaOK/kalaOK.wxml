<!--pages/kalaOK/kalaOK.wxml-->
<view class="shop" wx:for="{{list}}" wx:key="index">
  <image class="shop-img" lazy-load='true' src="{{item.img_url}}"></image>
  <view class="shop-info">
    <view class="shop-title ell">店铺名称：{{item.kname}}</view>
    <view class="shop-tel">电话：{{item.kphone}}</view>
    <view clsaa="shop-address">地址：{{item.kaddr}}</view>
    <view class="shop-time">营业时间：{{item.ktime}}</view>
  </view>
  <view class="shop-star">
    <view class="star-after">☆☆☆☆☆</view>
    <view class="star-before" style="width:{{item.kpoint}}%">★★★★★</view>
  </view>
</view>
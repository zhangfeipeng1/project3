<!--pages/message/message.wxml-->
<!--消息列表-->
<view  class="card" wx:for="{{list}}" wx:key="indeid">
   <text class="card-title">{{item.title}}</text>
   <text class="card-date">{{item.ctime}}</text>
   <!-- image 默认320*240-->
   <image class="card-image" lazy-load='true' mode="aspectFill" src="{{item.img_url}}"></image>
   <text class="card-desc">{{item.desc2}}</text>
   <text class="card-read arrow">查看详细</text>
</view> 